<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/error_screen_padding"
        android:paddingRight="@dimen/error_screen_padding"
        android:paddingTop="@dimen/error_screen_padding"
        android:paddingBottom="@dimen/error_screen_padding">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/error_screen_spacing"
            app:srcCompat="@drawable/error_image"
            tools:ignore="contentDescription"/>

        <TextView
            android:id="@+id/error_message"
            style="@style/Text_Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/error_screen_spacing"
            android:gravity="center_horizontal"
            android:text="@string/solver_error_generic"/>

        <Button
            android:id="@+id/btn_retry"
            style="@style/Text_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_primary"
            android:paddingLeft="@dimen/button_padding"
            android:paddingRight="@dimen/button_padding"
            android:text="@string/error_button_retry"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>

